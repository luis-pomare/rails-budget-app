<% total = 0 %>
<% group.entity.each do |entity| %>
  <% total += entity.amount %>
<% end %>


<%= link_to  group, class: 'text-decoration-none' do%>
  <article class='card container d-flex flex-row'>
    <img src=<%= image_path(group.icon) %> class="img-thumbnail w-25 m-1" alt="Image">
    <div class="card-body d-flex flex-row justify-content-between align-items-center">
      <p><%= group.name %></p>
      <p>$ <%= total %></p>
    </div>
  </article>
<% end %>
