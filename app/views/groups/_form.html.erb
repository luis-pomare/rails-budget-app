<%= form_with(model: group, html: {class: 'forms_container flex_centered_column'}) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :name, placeholder: 'Name', class: "field" %>
  
  <div class='new_transaction_icons_container'>
    <% image_filenames.each do |filename| %>

      <label>
        <div>
          <%= form.radio_button :icon, filename %>
          <%= image_tag(filename, alt: filename) %>
        </div>
      </label>
      
    <% end %>
  </div>

  <%= form.submit 'Save' %>
<% end %>
